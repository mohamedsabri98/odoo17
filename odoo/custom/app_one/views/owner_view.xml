<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree view -->
    <record id="owner_tree_view" model="ir.ui.view">
        <field name="name">owner tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="phone" />
                <field name="email" />
                <field name="address" />
                <field name="property_ids" />

            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="owner_form_view" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="phone" />
                        <field name="email" />
                        <field name="address" />
                        <field name="property_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="owner_action" model="ir.actions.act_window">
        <field name="name">owner</field>
        <field name="res_model">owner</field>
    </record>

    <menuitem
        id="configuration_menu_item"
        parent="configuration_menu"
        name="Owners"
        action="owner_action"
    />


</odoo>